{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "exports": {
    ".": "./src/index.ts"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "check": "biome check ./src",
    "lint": "biome lint --apply ./src",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@repo/database": "workspace:*",
    "@repo/schema": "workspace:*",
    "hono": "^4.5.9"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
