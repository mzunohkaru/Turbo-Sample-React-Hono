{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "tsc": {
      "dependsOn": ["^tsc"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "inputs": [
        ".env*"
      ],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "dev:server": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "dev:client": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "docker": {
      "cache": false,
      "persistent": true
    },
    "docker:db": {
      "cache": false,
      "persistent": true
    },
    "dev:docker": {
      "inputs": [
        ".env.development.local",
        ".env.development",
        ".env.local",
        ".env"
      ],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}

